<table class="clientes-table" cellspacing='0'>
    <thead>
        <tr class='odd'>
            <th>Nombre</th>
            <th>Raz√≥n Social</th>
            <th>Email</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        {% for index, cliente in clientes %}
        <tr class={{ (cont % 2) == 0 ? 'odd' : 'even' }}>
            <td>{{ cliente['nombre'] }}</td>
            <td>{{ cliente['razon'] }}</td>
            <td>{{ cliente['email'] }}</td>
            <td><a href="{{ path_for('detalle-cliente', {id: cliente.usuario_id}) }}">Detalle</a></td>
        </tr>
        {% set cont = cont + 1 %}
        {% endfor %}
    </tbody>
</table>