
{% set cont = 1 %}
<div class="demo">
	<h1>Claves Demo</h1>
	<table class="demo-table" cellspacing='0'>
		<thead>
			<tr class='odd'>
				<th>Función</th>
				<th>Nombre</th>
				<th>Clave</th>
				<th>Descripción</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% for item in demo %}
			<tr class={{ (cont % 2) == 0 ? 'odd' : 'even' }}>
				<td>{{ item['funcion'] }}</td>
				<td>{{ item['usuario'] }}</td>
				<td>{{ item['clave'] }}</td>
				<td>{{ item['descripcion'] }}</td>
				<td><a href="#" class="accion-login-llenar" data-usuario="{{ item['usuario'] }}"
				data-clave="{{ item['clave'] }}">Llenar forma</a></td>
			</tr>
			{% set cont = cont + 1 %}
			{% endfor %}
		</tbody>
	</table>
</div>
